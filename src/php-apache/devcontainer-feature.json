{
    "id": "php-apache",
    "name": "Setup PHP + Apache",
    "postCreateCommand": "sudo service apache2 start",
    "version": "1.0.0",
    "options": {
        "installComposer": {
            "type": "boolean",
            "default": true,
            "description": "Install PHP Composer?"
        },
        "apachePort": {
            "type": "number",
            "default": 8081,
            "description": "Port to expose Apache on"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "xdebug.php-debug",
				"bmewburn.vscode-intelephense-client"
            ]
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
